<Window x:Class="TuProyecto.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión" Height="250" Width="350">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="300" Height="100">
                <StackPanel>
                    <Label Content="Login"></Label>
                    <TextBox x:Name="txtUsuario"></TextBox>
                </StackPanel>
                <StackPanel>
                    <Label Content="Password"></Label>
                    <PasswordBox x:Name="txtContraseña"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Ingresar" Margin="10 0" Height="30" Width="100" Click="Button_Click"/>
                <Button Content="Cancelar" Height="30" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
